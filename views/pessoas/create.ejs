<%- include('../partials/header') %>

  <h1>Nova Pessoa</h1>
  <p><a href="/pessoas">Voltar para Lista de Pessoas</a></p>

  <form method="post">
    <div class="form-group my-3">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name='nome' placeholder="Digite seu Nome" />
    </div>
    <div class="form-group my-3">
      <label for="nascimento">Nascimento</label>
      <input type="text" class="form-control" id="nascimento" name='nascimento'
        placeholder="Digite sua data de nascimento" />
    </div>
    <div class="form-group my-3">
      <label for="cargo">Cargo</label>
      <input type="text" class="form-control" id="cargo" name='cargo' placeholder="Digite seu Cargo" />
    </div>
    <button type="submit" class="btn btn-primary btn-lg my-3">Salvar</button>

  </form>

  <%- include('../partials/footer') %>